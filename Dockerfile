# Use an official Node.js image as a starting point
FROM node:22-slim

# Set the working directory inside the container
WORKDIR /usr/src/app

# Install necessary dependencies for Puppeteer/Chrome
# This is the most important step
RUN apt-get update && apt-get install -y \
    ca-certificates \
    fonts-liberation \
    libasound2 \
    libatk-bridge2.0-0 \
    libatk1.0-0 \
    libc6 \
    libcairo2 \
    libcups2 \
    libdbus-1-3 \
    libexpat1 \
    libfontconfig1 \
    libgbm1 \
    libgcc1 \
    libgconf-2-4 \
    libgdk-pixbuf2.0-0 \
    libglib2.0-0 \
    libgtk-3-0 \
    libnspr4 \
    libnss3 \
    libpango-1.0-0 \
    libpangocairo-1.0-0 \
    libstdc++6 \
    libx11-6 \
    libx11-xcb1 \
    libxcb1 \
    libxcomposite1 \
    libxcursor1 \
    libxdamage1 \
    libxext6 \
    libxfixes3 \
    libxi6 \
    libxrandr2 \
    libxrender1 \
    libxss1 \
    libxtst6 \
    lsb-release \
    wget \
    xdg-utils \
    --no-install-recommends

# Download and install the latest stable Chrome browser
RUN wget https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb && \
    apt-get install -y ./google-chrome-stable_current_amd64.deb && \
    rm google-chrome-stable_current_amd64.deb

# Copy your package.json and package-lock.json
COPY package*.json ./

# Install your app's dependencies
RUN npm install

# Copy the rest of your app's source code
COPY . .

# Tell Puppeteer where to find the Chrome we just installed
ENV PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome-stable

# Run your script
CMD [ "npm", "start" ]